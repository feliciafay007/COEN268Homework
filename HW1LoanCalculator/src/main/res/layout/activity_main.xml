<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Amount Borrowed"
            android:id="@+id/textView"
            android:textColor="#ff343dff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_weight="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="please input amout of dollars"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interest Rate"
                android:id="@+id/textView2"
                android:textColor="#ff343dff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.0"
                android:id="@+id/textView9"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:id="@+id/textView7"
                android:layout_marginTop="7dp" />
            <SeekBar
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:indeterminate="false"
                android:max="100"
                android:progress="1" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="20.0"
                android:id="@+id/textView8"
                android:layout_marginTop="7dp" />
        </LinearLayout>



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Loan Term"
            android:id="@+id/textView3"
            android:textColor="#ff343dff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_weight="1" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/radiogroup"
            android:orientation="horizontal"
            android:layout_weight="1">
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:id="@+id/radioButton"
                    android:checked="true"
                    android:layout_weight="1"
                    android:layout_gravity="top" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:id="@+id/radioButton2"
                    android:checked="false"
                    android:layout_weight="1"
                    android:layout_gravity="top" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:id="@+id/radioButton3"
                    android:checked="false"
                    android:layout_weight="1"
                    android:layout_gravity="top" />

        </RadioGroup>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Taxes and Insurance"
            android:id="@+id/textView4"
            android:textSize="20dp"
            android:textColor="#ff343dff"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_weight="1" />

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Include tax and insurance in monthly payment"
            android:id="@+id/checkBox"
            android:checked="false"
            android:textColor="#ff343dff"
            android:textSize="12dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Calculate"
            android:id="@+id/button"
            android:textColor="#ff343dff"
            android:ellipsize="marquee"
            android:layout_marginTop="25dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Monthly Payment ï¼š"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ff343dff"
            android:layout_marginTop="20dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>
